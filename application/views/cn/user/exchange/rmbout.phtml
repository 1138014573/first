function rmboutDo() {

	var bank = $('#bank').val();
	if (bank.length == 0) {
		$('#errorTips').html('请选择提现银行卡，没有请添加').show();
		return false;
	}

	var money = $('#money').val();
	if (money < 500 || money > 50000) {
