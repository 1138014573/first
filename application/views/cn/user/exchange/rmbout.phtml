	}

	var pLen = $('#pwdtrade').val().length;
	if(pLen < 6 || pLen > 20) {
		$('#errorTips').html('密码长度在6-20个字符之间').show();
		return false;
	}

	if( !$('#code').val() ){
		$('#errorTips').html('请输入手机验证码').show();
		return false;
	}

	return true;

}

